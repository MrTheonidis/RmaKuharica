<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/rec_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/rec_ime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="45dp"
            android:textColor="#12d5ff"
            android:textSize="18sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/rec_vrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_id"
            android:text="Vrsta" />

        <TextView
            android:id="@+id/rec_sas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_vri"
            android:layout_marginRight="300dp"
            android:text="Click for ingredients"
            android:textColor="#90091D" />

        <TextView
            android:id="@+id/rec_vri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_vrs"
            android:text="Vrijeme" />

        <TextView
            android:id="@+id/rec_pri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_sas"
            android:text="Kliknite za detalje o pripremi" />

        <ImageView
            android:id="@+id/rec_slika"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="66dp"
            android:layout_marginTop="20dp"
            card_view:srcCompat="@mipmap/ic_launcher" />


    </RelativeLayout>


</android.support.v7.widget.CardView>